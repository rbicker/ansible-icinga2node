object Host "{{ icinga2_cs_host_objectname }}" {
{% if icinga2_cs_host_template  is defined %}
  import "{{ icinga2_cs_host_template }}"
{% endif %}
{% if icinga2_cs_host_display_name is defined %}
  display_name = "{{ icinga2_cs_host_display_name }}"
{% endif %}
{% if icinga2_cs_host_notes is defined %}
  notes = "{{ icinga2_cs_host_notes }}"
{% endif %}
{% if icinga2_cs_host_groups is defined %}
  groups += [
    {%- for g in icinga2_cs_host_groups %}
	{{'\n    "' + g + '",'}}
	{%- endfor %}

  ]
{% endif %}
{% if icinga2_cs_host_check_command is defined %}
  check_command = "{{ icinga2_cs_host_check_command }}"
{% endif %}
{% if icinga2_cs_host_address is defined %}
  address = "{{ icinga2_cs_host_address }}"
{% endif %}
{% if icinga2_cs_host_address6 is defined %}
  address6 = "{{ icinga2_cs_host_address6 }}"
{% endif %}
{% if icinga2_cs_host_vars is defined %}
{% for key in icinga2_cs_host_vars %}
  vars.{{ key }} = {{ icinga2_cs_host_vars[key] }} 
{% endfor %}
{% endif %}
{% if icinga2_cs_host_custom_block is defined %}
{{ icinga2_cs_host_custom_block }}
{% endif %}
}
